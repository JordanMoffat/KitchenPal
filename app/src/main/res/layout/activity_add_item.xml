<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.moffat.kitchenpal.AddItem"
    android:id="@+id/background"
    style="@style/AppTheme">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnSave"
        android:id="@+id/btnSave"
        android:theme="@style/Base.Theme.AppCompat.Light"
        style="@android:style/TextAppearance.Material.Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:inputType="text"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinnercategory"
        android:layout_alignEnd="@+id/ISDN"
        android:textColor="@color/abc_primary_text_material_light"
        android:singleLine="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ISDN"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:text="ISDN"
        android:layout_toStartOf="@+id/btnSave" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnercategory"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/btnSave"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="101dp"
        android:prompt="@color/abc_primary_text_material_light"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Light"
        android:entries="@color/abc_primary_text_material_light"
        android:focusable="false"
        android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
        android:paddingRight="@dimen/abc_dropdownitem_text_padding_right" />

</RelativeLayout>
