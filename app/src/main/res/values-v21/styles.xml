<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/AccentColor</item>
        <item name="android:datePickerDialogTheme">@style/DatePicker</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:actionMenuTextColor">@color/bright_foreground_inverse_material_dark</item>
        <item name="android:actionMenuTextAppearance">@color/bright_foreground_inverse_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
        <item name="android:actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>


    </style>

    <style name="DatePicker" parent="android:Theme.Material.Light.Dialog">

        <item name="android:colorAccent">@color/ColorPrimary</item>

    </style>

    <style name ="Base.Widget.Design.TabLayout" parent ="android:Widget">
        <item name="tabSelectedTextColor">@color/abc_primary_text_material_dark</item>
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>

    </style>


</resources>
